<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0
    http://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
    name="laboratorios-microservice">

  <requiredProperties>
    <requiredProperty key="service-name">
      <defaultValue>example-service</defaultValue>
    </requiredProperty>
    <requiredProperty key="service-description">
      <defaultValue>Microservicio de ejemplo</defaultValue>
    </requiredProperty>
    <requiredProperty key="service-port">
      <defaultValue>8080</defaultValue>
    </requiredProperty>
  </requiredProperties>

  <fileSets>
    <!-- Java source files -->
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>

    <!-- Resources -->
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/main/resources</directory>
      <includes>
        <include>**/*.properties</include>
        <include>**/*.yml</include>
      </includes>
    </fileSet>

    <!-- Wallet directory (no filtering) -->
    <fileSet filtered="false" encoding="UTF-8">
      <directory>src/main/resources/wallet</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

    <!-- Test files -->
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/test/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>

    <!-- Root files -->
    <fileSet filtered="true" encoding="UTF-8">
      <directory></directory>
      <includes>
        <include>Dockerfile</include>
        <include>.dockerignore</include>
      </includes>
    </fileSet>
  </fileSets>
</archetype-descriptor>
